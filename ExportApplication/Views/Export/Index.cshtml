@model List<ExportApplication.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2 class="text-center my-4">Employee List</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow rounded">
        <thead class="table-dark">
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Position</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="button-container">
    <a href="@Url.Action("ExportToExcel", "Export")">
        <button class="btn btn-excel">Export to Excel</button>
    </a>
    <a href="@Url.Action("ExportToPDF", "Export")">
        <button class="btn btn-pdf">Export to PDF</button>
    </a>
</div>
